#include <Stepper.h>


const int stepsPerRevolution = 200;  
Stepper myStepper(stepsPerRevolution, 8, 9, 10, 11);
// TCS230 or TCS3200 pins wiring to Arduino
#define S0 2
#define S1 4
#define S2 5
#define S3 6
#define sensorOut 7

// Stores frequency read by the photodiodes
int redFrequency = 0;
int blueFrequency = 0;

// Stores the red and blue colors
int redColor = 0;
int blueColor = 0;
int redReturn;
int blueReturn;

//establish drive motor pins
int motorPin1 = 13;
int motorPin2 = 12;
int motorSpeed = 3;
int speed1 = 5;
int speed2 = 255;











void setup() {
  // Setting the outputs
  pinMode(S0, OUTPUT);
  pinMode(S1, OUTPUT);
  pinMode(S2, OUTPUT);
  pinMode(S3, OUTPUT);
  
  // Setting the sensorOut as an input
  pinMode(sensorOut, INPUT);
  
  // Setting frequency scaling to 20%
  digitalWrite(S0,HIGH);
  digitalWrite(S1,LOW);
  
  // Begins serial communication
  Serial.begin(9600);

  //establish motor outputs
  pinMode(motorPin1, OUTPUT);
  pinMode(motorPin2, OUTPUT);
  pinMode(motorSpeed, OUTPUT);
}




void loop() {
speedCtrl();
turnCtrl();
}











void returnToZero(){
  int sensorReading = analogRead(A0);
  int potenSpot = sensorReading / 10.23;

   if (potenSpot >= 51) {
    myStepper.setSpeed(60);
    myStepper.step(1);
  }
  else if(potenSpot <= 49){
    myStepper.setSpeed(60);
    myStepper.step(-1);
  }
}
void turnLeft(){
  int sensorReading = analogRead(A0);
  int potenSpot = sensorReading / 10.23;

   if (potenSpot >= 45) {
    myStepper.setSpeed(60);
    myStepper.step(1);
  }
  else if(potenSpot <= 42){
    myStepper.setSpeed(60);
    myStepper.step(-1);
  }
}
void turnRight(){
  int sensorReading = analogRead(A0);
  int potenSpot = sensorReading / 10.23;

   if (potenSpot >= 57) {
    myStepper.setSpeed(60);
    myStepper.step(1);
  }
  else if(potenSpot <= 55){
    myStepper.setSpeed(60);
    myStepper.step(-1);
  }
}

int chkRedVal(){
  // Setting RED (R) filtered photodiodes to be read
  digitalWrite(S2,LOW);
  digitalWrite(S3,LOW);
  
  // Reading the output frequency
  redFrequency = pulseIn(sensorOut, LOW);
  // Remaping the value of the RED (R) frequency from 0 to 255
  // You must replace with your own values. Here's an example: 
  // redColor = map(redFrequency, 70, 120, 255,0);
  redColor = map(redFrequency, 40, 106, 255,0);
  
  // Printing the RED (R) value
  Serial.print("R = ");
  Serial.print(redColor);
  return redColor;
}

int chkBlueVal(){
  // Setting BLUE (B) filtered photodiodes to be read
  digitalWrite(S2,LOW);
  digitalWrite(S3,HIGH);
  
  // Reading the output frequency
  blueFrequency = pulseIn(sensorOut, LOW);
  // Remaping the value of the BLUE (B) frequency from 0 to 255
  // You must replace with your own values. Here's an example: 
  // blueColor = map(blueFrequency, 38, 84, 255, 0);
  blueColor = map(blueFrequency, 25, 40, 255, 0);
  
  // Printing the BLUE (B) value 
  Serial.print(" B = ");
  Serial.print(blueColor);
  return blueColor;
}

float chkDistance(){
  int sensorValue = analogRead(A1);
  float voltage = sensorValue * (5.0/1023.0);
  return(voltage);
}


void turnCtrl(){
float      volt = chkDistance();
  if(volt <= 1.3 && volt >= 1.1){
    returnToZero();
  }
  else if(volt > 1.3){
    turnLeft();
  }
  else if (volt < 1.1){
    turnRight();
  }
}
void speedCtrl(){
  redReturn = chkRedVal();
  blueReturn = chkBlueVal();
  if(redReturn > blueReturn){
      Serial.println(" - RED detected!");
      digitalWrite(motorPin1, HIGH);
      digitalWrite(motorPin2, LOW);
      analogWrite(motorSpeed, 100);
  }
   if(blueReturn > redReturn){
    Serial.println(" - BLUE detected!");
    digitalWrite(motorPin1, HIGH);
    digitalWrite(motorPin2, LOW);
    analogWrite(motorSpeed, 255);
  }
}
